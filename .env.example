# Environment variables template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/umdm_plus
REDIS_URL=redis://localhost:6379

# Storage
STORAGE_TYPE=local
# For S3-compatible storage (MinIO, AWS S3, etc.)
# STORAGE_TYPE=s3
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET=umdm-downloads

# AI Services
# OpenAI API (for transcription fallback)
# OPENAI_API_KEY=your_openai_key_here

# Whisper AI (local or API)
WHISPER_MODEL=base
# WHISPER_API_URL=http://localhost:8080

# Video Upscaling
UPSCALE_GPU_ENABLED=false
# UPSCALE_MODEL_PATH=./models/realesrgan

# DRM Services (Enterprise feature)
# WIDEVINE_CDM_PATH=./cdm
# DRM_SERVICE_URL=http://localhost:8081

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# CDN & Assets
CDN_URL=
ASSETS_PATH=./assets

# Monitoring & Logging
LOG_LEVEL=info
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090

# Email (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Background Jobs
QUEUE_CONCURRENCY=5
MAX_DOWNLOAD_QUEUE=100
JOB_TIMEOUT_MS=600000

# Feature Flags
ENABLE_DRM_DOWNLOADS=false
ENABLE_AI_UPSCALING=true
ENABLE_BATCH_DOWNLOADS=true
ENABLE_AUTO_SUBSCRIPTION=true
CLIPBOARD_MONITOR=true

# Legal & Compliance
DMCA_EMAIL=dmca@umdm.app
SUPPORT_EMAIL=support@umdm.app
ENABLE_ATTRIBUTION_TOOLS=true
ENABLE_COMPLIANCE_TRACKING=true

# External Services
# YouTube Data API (optional, for enhanced metadata)
# YOUTUBE_API_KEY=your_youtube_api_key

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# ENABLE_ANALYTICS=false

# Development
DEBUG=false
HOT_RELOAD=true
MOCK_DOWNLOADS=true
